@model Auruhana.Models.DoctorSchedule

@{
    ViewBag.Title = "Менің кестем";
    Layout = "~/Views/Shared/_profile-doc.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="font-size:14px">
    <h2 style="text-align:center">Менің кестем</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    
<div class="form-group">
    <div class="col-md-1 text-center">
        </div>
        <div class="col-md-2 text-center">
            Дәрігер ID
        </div>
        <div class="col-md-7">
            @Html.EditorFor(model => model.DoctorId, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
        </div>
    </div>

<div class="form-group">
    <div class="col-md-1 text-center">
    </div>
    <div class="col-md-2 text-center">
        Дәрігер аты
    </div>
    <div class="col-md-7">
        @Html.EditorFor(model => model.DoctorName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DoctorName, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-1 text-center">
    </div>
    <div class="col-md-2 text-center">
        Барлық қабылдаулар саны (слоттар)
    </div>
    <div class="col-md-7">
        @Html.EditorFor(model => model.TotalSlots, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TotalSlots, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-1 text-center">
    </div>
    <div class="col-md-2 text-center">
        Бір жұмадағы қабылдау күндері
    </div>
    <div class="col-md-7">
        @Html.EditorFor(model => model.DaysOfTheWeek, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DaysOfTheWeek, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-1 text-center">
    </div>
    <div class="col-md-2 text-center">
        Уақыты
    </div>
    <div class="col-md-7">
        @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
    </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" value="Кестені өзгерту" class="btn btn-default" />
            </div>
        </div>
    </div>
}